<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tvnclRoute"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="@+id/tvnclRoute"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvnclName"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@+id/tvnclName"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvnclSerial"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="@+id/tvnclSerial"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvnclReading"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="@+id/tvnclReading"
        android:textSize="20sp" />

</LinearLayout>